{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} • Classement
{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <li class="active">Classement</li>
{% endblock %}

{% block body %}
    <h1>Classement</h1>

    <hr>

    <table id="table_teams" class="table table-striped table-hover">
        <thead class="thead-inverse">
            <tr>
                <th>#</th>
                <th>Équipe</th>
                <th>Points</th>
                <th>Buts pris</th>
                <th>Buts contre</th>
                <th>Différence</th>
            </tr>
        </thead>

        <tbody class="table_users_tbody">
            {% for i in 0..teams.name|length-1 %}
                <tr>
                    <td>{{ i + 1 }}</td>
                    <td>{{ teams.name[i] }}</td>
                    <td>{{ teams.points[i] }}</td>
                    <td>{{ teams.bp[i] }}</td>
                    <td>{{ teams.bc[i] }}</td>
                    <td>{{ teams.diff[i] }}</td>
                </tr>
            {% else %}

            {% endfor %}
        </tbody>
    </table>
{% endblock %}
