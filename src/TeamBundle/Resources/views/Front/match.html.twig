<table class="table table-striped table-hover">
    <thead class="thead-inverse">
        <tr>
            <th>Match</th>
            <th>Date</th>
            <th>Arbitre</th>
            <th>Type</th>
        </tr>
    </thead>

    <tbody>
        {% for match in matchs %}
            <tr>
                <td>{{ match.team1.name }}<br><b>VS</b><br>{{ match.team2.name }}</td>
                <td>
                    {{ match.date|date('d/m/Y H:i') }}
                    {% if match.date < date() %}
                        <br>
                        {% if match.prestations|length > 0 %}
                            <i class="fa fa-sticky-note"></i> <a>Voir la feuille de match</a>
                        {% else %}
                            <i>En attente des résultats</i>
                        {% endif %}
                    {% endif %}
                </td>
                <td>{{ match.referee.username }}</td>
                <td>{{ match.type }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucun match trouvé</td>
            </tr>
        {% endfor %}
    </tbody>
</table>
