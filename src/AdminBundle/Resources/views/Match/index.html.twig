{% extends 'AdminBundle::base.html.twig' %}

{% block title %}
    {{ parent() }} • Gestion des matchs
{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <li class="active">Gestion des matchs</li>
{% endblock %}

{% block body %}
    <h1>Gestion des matchs</h1>

    <hr>

    <table id="table_matchs" class="table table-striped table-hover m-t-1">
        <thead class="thead-inverse">
            <tr>
                <th class="text-xs-center">Équipes</th>
                <th>Date</th>
                <th>Arbitre</th>
                <th>Terrain</th>
                <th>Type</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody class="table_matchs_tbody">
            {% for match in matchs %}
                <tr>
                    <td class="text-xs-center">
                        {{ match.team1.name }}
                        <br><b>VS</b><br>
                        {{ match.team2.name }}
                    </td>
                    <td>{% if match.date %}{{ match.date|date('d/m/Y H:i') }}{% else %}<i>Aucune date sélectionnée</i>{% endif %}</td>
                    <td>{% if match.referee %}{{ match.referee.username }}{% else %}<i>Aucun arbitre sélectionné</i>{% endif %}</td>
                    <td>{% if match.field %}{{ match.field.name }}{% else %}<i>Aucun terrain sélectionné</i>{% endif %}</td>
                    <td>{{ match.type }}</td>
                    <td></td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">Aucun match n'a été trouvé. Cela signifie que le tournoi n'a pas encore commencé et que les matchs n'ont pas encore été générés.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
