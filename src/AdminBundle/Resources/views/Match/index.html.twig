{% extends 'AdminBundle::base.html.twig' %}

{% block title %}
    {{ parent() }} • Gestion des matchs
{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <li class="active">Gestion des matchs</li>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}

    {% stylesheets '@MainBundle/Resources/public/css/bootstrap-datetimepicker.min.css' %}
        <link rel="stylesheet" href="{{ asset_url }}">
    {% endstylesheets %}
{% endblock %}

{% block body %}
    <h1>Gestion des matchs</h1>

    <hr>

    <div class="modal fade" id="editMatch" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="modal-title">Modification d'un match</h4>
                </div>
                <div class="modal-body">
                    <div class="alert alert-danger editMatchError hidden-xs-up"></div>

                    <div class="form-horizontal">
                        <div class="form-group row">
                            <label class="form-control-label col-md-2" for="editMatch_Date">Date</label>
                            <div class="col-md-10">
                                <input type="text" id="editMatch_Date" placeholder="Date" class="form-control">
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="form-control-label col-md-2" for="editMatch_Referee">Arbitre</label>
                            <div class="col-md-10">
                                <input type="text" id="addNew_Date" placeholder="Date de publication" class="form-control">
                                <small class="text-muted">
                                    Laissez ce champs vide pour utiliser la date et l'heure actuelle
                                </small>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="form-control-label col-md-2" for="editMatch_Field">Terrain</label>
                            <div class="col-md-10">
                                <textarea class="form-control tinymce" id="addNew_Message" rows="5" placeholder="Message"></textarea>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
                    <button type="button" class="btn btn-primary addNews"><i class="fa fa-pencil"></i> Enregistrer</button>
                </div>
            </div>
        </div>
    </div>

    <table id="table_matchs" class="table table-striped table-hover m-t-1">
        <thead class="thead-inverse">
            <tr>
                <th class="text-xs-center">Équipes</th>
                <th>Date</th>
                <th>Arbitre</th>
                <th>Terrain</th>
                <th>Type</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody class="table_matchs_tbody">
            {% for match in matchs %}
                {% include 'AdminBundle:Match:matchRow.html.twig' %}
            {% else %}
                <tr>
                    <td colspan="5">Aucun match n'a été trouvé. Cela signifie que le tournoi n'a pas encore commencé et que les matchs n'ont pas encore été générés.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    {% javascripts output='js/compiled/admin/match.js'
        '@AdminBundle/Resources/public/js/match.js'
        '@MainBundle/Resources/public/js/moment.js'
        '@MainBundle/Resources/public/js/moment-with-locales.js'
        '@MainBundle/Resources/public/js/bootstrap-datetimepicker.js'
    %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}
