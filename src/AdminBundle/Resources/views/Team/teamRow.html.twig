<tr data-id="{{ team.id }}">
    <td>{{ team.name }}</td>
    <td>{{ team.registrationDate | date("d/m/Y - H:i") }}</td>
    <td>{{ team.manager.username }}</td>
    <td class="text-xs-center">
        {% if team.valid %}
            <i class="fa fa-check text-success" data-toggle="tooltip" title="Équipe validée"></i>
        {% else %}
            <i class="fa fa-remove text-danger" data-toggle="tooltip" title="Équipe non validée"></i>
        {% endif %}
    </td>
    <td>
        <div class="btn-toolbar" role="toolbar" aria-label="Outils">
            <div class="btn-group btn-group-sm" role="group" aria-label="Edition">
                <button type="button" class="btn btn-secondary" data-action="delete" data-id="{{ team.id }}"><i class="fa fa-trash"></i></button>
                <button type="button" class="btn btn-secondary" data-action="edit" data-id="{{ team.id }}"><i class="fa fa-pencil"></i></button>
                <button type="button" class="btn btn-secondary" data-action="validate" data-id="{{ team.id }}" data-toggle="tooltip" title="Valider ou invalider l'équipe"><i class="fa fa-{% if not team.valid %}check{% else %}remove{% endif %}"></i></button>
            </div>
        </div>
    </td>
</tr>
