{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} • Arbitrage des matchs
{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <li class="active">Arbitrage des matchs</li>
{% endblock %}

{% block body %}
    <h1>Mes arbitrages</h1>

    <hr>

    <div class="modal fade" id="editPrestations" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="modal-title">Ajouter une news</h4>
                </div>
                <div class="modal-body">
                    <div class="editPrestationsError"></div>

                    <div class="row">
                        <div id="modal_div_team1" class="col-md-12">
                            {% include 'MatchBundle:Referee:modal.prestations.html.twig' %}
                        </div>
                        <div id="modal_div_team2" class="col-md-12">
                            {% include 'MatchBundle:Referee:modal.prestations.html.twig' %}
                        </div>
                    </div>

                    <div class="clearfix"></div>
                    <!--<div class="form-horizontal">
                        <div class="form-group row">
                            <label class="form-control-label col-md-2" for="addNew_Title">Titre</label>
                            <div class="col-md-10">
                                <input type="text" id="addNew_Title" placeholder="Titre" class="form-control">
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="form-control-label col-md-2" for="addNew_Message">Message</label>
                            <div class="col-md-10">
                                <textarea class="form-control" id="addNew_Message" rows="5" placeholder="Message"></textarea>
                            </div>
                        </div>
                    </div>-->
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
                    <button type="button" class="btn btn-primary editPrestations"><i class="fa fa-pencil"></i> Enregistrer</button>
                </div>
            </div>
        </div>
    </div>

    <table class="table table-striped table-hover">
        <thead class="thead-inverse">
            <tr>
                <th class="text-xs-center">Match</th>
                <th>Date</th>
                <th>Terrain</th>
                <th class="text-xs-center">Résultats entrés</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody>
            {% for match in matchs %}
                <tr>
                    <td class="text-xs-center">
                        {{ match.team1.name }}
                        <br><b>VS</b><br>
                        {{ match.team2.name }}
                    </td>
                    <td>{% if match.date %}{{ match.date|date('d/m/Y H:i') }}{% else %}<i>Aucune date sélectionnée</i>{% endif %}</td>
                    <td>{% if match.field %}{{ match.field.name }}{% else %}<i>Aucun terrain sélectionné</i>{% endif %}</td>
                    <td class="text-xs-center">
                        {% if match.date > date() %}
                            <i>Match non joué</i>
                        {% else %}
                            {% if match.prestations|length > 0 %}
                                <i class="fa fa-check text-success"></i>
                            {% else %}
                                <i class="fa fa-remove text-danger"></i>
                            {% endif %}
                        {% endif %}
                    </td>
                    <td>
                        {% if match.date < date() %}
                            <button id="btn_editPrestations" class="btn btn-primary" data-id="{{ match.id }}">{% if match.prestations|length > 0 %}Éditer la feuille de match{% else %}Remplir la feuille de match{% endif %}</button>
                        {% endif %}
                    </td>
                </tr>
            {% else %}
                <i>Vous n'arbitrez aucun match pour le moment</i>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    {% javascripts output='js/compiled/match/referee.js'
        '@MatchBundle/Resources/public/js/referee.js'
    %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}